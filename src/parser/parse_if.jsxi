function parseIfStatement (){
	expectKeyword ('if');
	expect ('(');

	var test = parseExpression (),
		consequent,
		alternate;

	expect (')');

	consequent = parseStatement ();

	if (matchKeyword ('else')){
		lex ();
		alternate = parseStatement ();
	} else 
		alternate = null;

	return ifStatement (test, consequent, alternate);
}